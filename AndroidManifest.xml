<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mani.droid.quickpro"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="16" />

    <supports-screens 
        android:smallScreens="false"
        android:normalScreens="false"
        android:largeScreens="true"
        android:xlargeScreens="true" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="mani.droid.quickpro.SplashActivity"
            android:label="@string/app_name" android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="landscape" />
        
        <activity android:name=".MainActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="landscape" />
        
        <activity android:name=".SubMenuActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="landscape" />
        
        <activity android:name=".ContentActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="landscape" />
        
        <activity android:name=".CourseActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="landscape" />
        
        <activity android:name=".QuizActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="landscape" />
        
        <activity android:name=".WorkoutActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="landscape" />
        
        <activity android:name=".WorkActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="landscape" />
        
        <activity android:name="org.achartengine.GraphicalActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="landscape" />
    </application>

</manifest>