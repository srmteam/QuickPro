<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
        android:layout_width="match_parent"
		android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <TextView
            android:id="@+id/textView1"
            style="@style/syntax"
            android:text="using System;" />

        <TextView
            android:id="@+id/textView2"
            style="@style/syntax"
            android:layout_below="@+id/textView1"
            android:text="namespace Test {" />

        <TextView
            android:id="@+id/textViewBlah"
            style="@style/syntax"
            android:layout_below="@+id/textView2"
            android:text="  " />
        
        <TextView
            android:id="@+id/expText1"
            style="@style/syntax_opt"
            android:layout_toRightOf="@+id/textViewBlah"
            android:layout_below="@+id/textView2"
            android:background="@drawable/btn_text"
            android:text="class" />

        <TextView
            android:id="@+id/textView9"
            style="@style/syntax"
            android:layout_below="@+id/expText1"
            android:text="    static void " />

        <TextView
            android:id="@+id/textView7"
            style="@style/syntax"
            android:layout_below="@+id/textView9"
            android:text="      System.Console.WriteLine(&quot;Hello, world!&quot;);" />

        <TextView
            android:id="@+id/textView6"
            style="@style/syntax"
            android:layout_below="@+id/textView7"
            android:text="    }" />

        <TextView
            android:id="@+id/textView5"
            style="@style/syntax"
            android:layout_below="@+id/textView6"
            android:text="  }" />

        <TextView
            android:id="@+id/textView4"
            style="@style/syntax"
            android:layout_below="@+id/textView5"
            android:text="}" />

        <TextView
            android:id="@+id/textView3"
            style="@style/syntax"
            android:layout_above="@+id/textView9"
            android:layout_toRightOf="@+id/expText1"
            android:text=" ExampleClass {" />

        <TextView
            android:id="@+id/expText2"
            style="@style/syntax_opt"
            android:layout_alignBaseline="@+id/textView9"
            android:layout_alignBottom="@+id/textView9"
            android:layout_toRightOf="@+id/textView9"
            android:background="@drawable/btn_text"
            android:text="Main" />

        <TextView
            android:id="@+id/TextView02"
            style="@style/syntax"
            android:layout_alignBaseline="@+id/expText2"
            android:layout_alignBottom="@+id/expText2"
            android:layout_toRightOf="@+id/expText2"
            android:text="() {" />

        <TextView
            android:id="@+id/expKey2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView7"
            android:layout_alignBottom="@+id/textView7"
            android:layout_alignLeft="@+id/expKey1"
            android:background="@drawable/btn_key"
            android:text="Main"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/expKey1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"
            android:background="@drawable/btn_key"
            android:text="class"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
            android:id="@+id/button1"
            android:layout_margin="10dp"
            android:onClick="onCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_correct"
            android:text="Check"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </RelativeLayout>
        
</ScrollView>