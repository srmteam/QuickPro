<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar.Fullscreen">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="navbar_button">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:button">@null</item>
    <item name="android:background">#000000</item>
    <item name="android:gravity">center_horizontal</item>
    <item name="android:layout_weight">1</item>
    <item name="android:textColor">#FFFFFF</item>
  </style>
    
  <style name="opt_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/btn_options</item>
        <item name="android:gravity">center</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">2</item>
        <item name="android:onClick">onAnswer</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    
  	<style name="syntax">
  	    <item name="android:layout_width">wrap_content</item>
  	    <item name="android:layout_height">wrap_content</item>
  	    <item name="android:layout_margin">3dp</item>
  	    <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
  	</style>
  	
  	<style name="syntax_opt">
  	    <item name="android:layout_width">wrap_content</item>
  	    <item name="android:layout_height">wrap_content</item>
  	    <item name="android:layout_margin">3dp</item>
  	    <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
  	    <item name="android:textColor">#007F00</item>
  	    <item name="android:textStyle">bold</item>
  	</style>
    
</resources>